@namespace ChessBlazor.Components.Chess

@rendermode InteractiveServer

@using ChessBlazor.Components.Chess.Player
@using ChessBlazor.Components.Chess.Services
@using global::Chess.Programming.Ago.ChessEngines
@using global::Chess.Programming.Ago.Core
@inject IJSRuntime JS

@* Welcome Overlay (Separate Component) *@
@if (!isGameStarted) {
    <WelcomeOverlay 
        WhitePlayerName="@WhitePlayer.GetType().Name" 
        BlackPlayerName="@BlackPlayer.GetType().Name" 
        OnStartGame="StartGame" />
}

@* Game End Banner (Separate Component) *@
@if (isGameStarted && game.IsFinished()) {
    <GameEndBanner 
        IsWin="@(game.Winner != null)" 
        WinnerColor="@(game.Winner?.Color.ToString() ?? "")" 
        GameEndReason="@game.GetGameEndReason()"
        OnPlayAgain="PlayAgain"
        OnRetry="RetryGame" />
}

<div class="chess-engine-wrapper">
    <div class="chess-game-section">
        <div class="game-controls">
            @if (isGameStarted && !game.IsFinished()) {
                <div class="spinner-container">
                    <div class="spinner"></div>
                    <span class="game-active-text">Game active</span>
                </div>
            }
            
            @if (HasVisualizablePlayer && lastSearchResult != null) {
                <button class="btn btn-visualization" @onclick="ToggleVisualization">
                    View Algorithm
                </button>
            }
        </div>

        @if (HasVisualizablePlayer) {
            <div class="algorithm-settings">
                <label class="setting-item">
                    <input type="checkbox" @bind="alphaBetaEnabled" @bind:after="UpdateAlphaBetaSetting" />
                    <span>Alpha-Beta Pruning</span>
                </label>
                <label class="setting-item">
                    <span>Search Depth:</span>
                    <input type="number" min="1" max="5" @bind="searchDepth" @bind:after="UpdateSearchDepthSetting" />
                </label>
            </div>
        }

        <div class="notification-center">
            @if(isGameStarted && game.IsChecked(game.GetCurrentPlayer().Color)) {
                <div class="notification notification-warning">
                    @((game.GetCurrentPlayer().Color == PieceColor.White ? "White" : "Black") + " is in check")!
                </div>
            } 
        </div>

        @* Binary Display Above Board *@
        @if (activeBitboard.HasValue) {
            <div class="binary-display-header">
                <div class="binary-label-header">@activeBitboardName</div>
                <div class="binary-string-header">
                    @for (int i = 63; i >= 0; i--) {
                        var bit = (activeBitboard.Value >> i) & 1;
                        <span class="bit-header @(bit == 1 ? "bit-set-header" : "bit-unset-header")">@bit</span>
                    }
                </div>
            </div>
        }

        <div class="game-layout">
            <div class="side-panel left-panel">
                <div class="captured-pieces-panel captured-pieces-white">
                    <h3>Captured by White</h3>
                    <div class="captured-pieces-list">
                        @foreach(var piece in game.GetCapturedPieces().Where(p => p.Color == PieceColor.Black)) {
                            <div class="captured-piece @(@piece.Type.ToString().ToLower())-@(@piece.Color.ToString().ToLower())"></div>
                        }
                    </div>
                </div>
                
                @* Bitboard Visualizer Panel *@
                <BitBoardVisualizer 
                    Board="@game.GetVisualizedBoard()" 
                    OnBitboardSelected="HandleBitboardSelected"
                    OnAttackModeToggled="HandleAttackModeToggled"
                    MagicInfo="@currentMagicInfo"
                    ActiveBitboard="@activeBitboard"
                    ActiveBitboardName="@activeBitboardName" />
            </div>

            <div class="board-container">
                <div class="board-header">
                    <div class="player-info-row">
                        <div class="badge badge-black @(game.GetCurrentPlayer().Color == PieceColor.Black ? "badge-is-turn" : "")">Black</div>
                        <div class="badge badge-algorithm">@BlackPlayer.GetType().Name</div>
                    </div>
                    @if (isGameStarted) {
                        <div class="chess-clock @(game.GetCurrentPlayer().Color == PieceColor.Black ? "clock-active" : "")">
                            <div class="clock-main">
                                @FormatTime(blackTotalTime)
                            </div>
                            <div class="clock-meta">
                                @if (blackLastMoveTime > TimeSpan.Zero) {
                                    <span class="clock-move-time">last: @FormatTime(blackLastMoveTime)</span>
                                }
                                <span class="clock-moves">@blackMoveCount moves</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="board-with-coordinates">
                    @* Rank numbers on the left *@
                    <div class="board-ranks">
                        @for(int rank = 8; rank >= 1; rank--) {
                            <div class="board-coordinate">@rank</div>
                        }
                    </div>
                    
                    <div class="board-body">
                        @for(int i = 0; i < 8; i++) {
                            <div class="board-column">
                                @for(int j = 0; j < 8; j++) {
                                    var row = 7 - i;
                                    var column = j;
                                    var position = new Position(row, column);
                                    var bitPosition = row * 8 + column;
                                    var promotionMovesToThisSquare = validMovesForselectedCellPosition
                                        .Where(move => move.To == position && move.PromotedTo != null)
                                        .ToList();
                                    var hasPromotionOptions = promotionMovesToThisSquare.Count >= 1;
                                    var isHintFrom = currentHint?.SuggestedMove?.From == position;
                                    var isHintTo = currentHint?.SuggestedMove?.To == position;
                                    var isBitSet = activeBitboard.HasValue && ((activeBitboard.Value >> bitPosition) & 1) == 1;
                                    
                                    <div class="board-row-cell 
                                            @(selectedCellPosition == new Position(row, column) ? "board-row-cell-selected" : "") 
                                            @((row + column) % 2 == 0 ? "board-row-cell-even" : "board-row-cell-odd") 
                                            @(game.GetLastMove()?.From == position ? "board-row-cell-last-move-from" : "")
                                            @(game.GetLastMove()?.To == position ? "board-row-cell-last-move-to" : "")
                                            @(validMovesForselectedCellPosition.Any(move => move.To == new Position(row, column)) ? "board-row-cell-valid-move" : "")
                                            @(isHintFrom ? "board-row-cell-hint-from" : "")
                                            @(isHintTo ? "board-row-cell-hint-to" : "")
                                            @(isBitSet ? "board-row-cell-bit-set" : "")
                                            @(activeBitboard.HasValue && !isBitSet ? "board-row-cell-bit-unset" : "")"
                                            @onclick="() => HandleCellClick(position)"
                                            ondragover="event.preventDefault();"
                                            @ondrop="() => HandleDrop(position)">
                                        
                                        @* Bitboard Overlay *@
                                        @if (activeBitboard.HasValue) {
                                            <div class="bitboard-overlay @(isBitSet ? "overlay-set" : "overlay-unset")">
                                                <span class="overlay-bit">@(isBitSet ? "1" : "0")</span>
                                            </div>
                                        }
                                        
                                        @{
                                            var piece = game.GetPieceAtPosition(position);
                                            var isDraggable = piece != null && piece.Color == game.GetCurrentPlayer().Color && isGameStarted && !game.GetCurrentPlayer().IsAI() && !game.IsFinished();
                                            if(hasPromotionOptions) {
                                                <div class="promotion-options">
                                                    @foreach(var promoMove in promotionMovesToThisSquare) {
                                                        if(promoMove.PromotedTo.HasValue) {
                                                            var pieceType = promoMove.PromotedTo.Value;
                                                            var pieceColor = game.GetCurrentPlayer().Color;
                                                            <div class="promotion-option @(@pieceType.ToString().ToLower())-@(@pieceColor.ToString().ToLower())"
                                                                 @onclick="() => HandlePromotionClick(promoMove)"
                                                                 @onclick:stopPropagation="true">
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                            } else if(piece != null) {
                                                <div class="board-piece @(@piece.Type.ToString().ToLower())-@(@piece.Color.ToString().ToLower()) @(isDraggable ? "draggable-piece" : "") @(attackModeEnabled ? "attack-mode-piece" : "")"
                                                     draggable="@isDraggable.ToString().ToLower()"
                                                     @ondragstart="() => HandleDragStart(position)"
                                                     @ondragend="HandleDragEnd">
                                                </div>
                                            } else {
                                                <span class="board-empty-text">
                                                </span>
                                            }
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    
                    @* Rank numbers on the right *@
                    <div class="board-ranks">
                        @for(int rank = 8; rank >= 1; rank--) {
                            <div class="board-coordinate">@rank</div>
                        }
                    </div>
                </div>
                
                @* File letters at the bottom *@
                <div class="board-files">
                    <div class="board-files-spacer"></div>
                    @foreach(var file in new[] { 'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h' }) {
                        <div class="board-coordinate">@file</div>
                    }
                    <div class="board-files-spacer"></div>
                </div>
                
                <div class="board-footer">
                    <div class="player-info-row">
                        <div class="badge badge-white @(game.GetCurrentPlayer().Color == PieceColor.White ? "badge-is-turn" : "")">White</div>
                        <div class="badge badge-algorithm">@WhitePlayer.GetType().Name</div>
                    </div>
                    @if (isGameStarted) {
                        <div class="chess-clock @(game.GetCurrentPlayer().Color == PieceColor.White ? "clock-active" : "")">
                            <div class="clock-main">
                                @FormatTime(whiteTotalTime)
                            </div>
                            <div class="clock-meta">
                                @if (whiteLastMoveTime > TimeSpan.Zero) {
                                    <span class="clock-move-time">last: @FormatTime(whiteLastMoveTime)</span>
                                }
                                <span class="clock-moves">@whiteMoveCount moves</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="side-panel right-panel">
                <div class="captured-pieces-panel captured-pieces-black">
                    <h3>Captured by Black</h3>
                    <div class="captured-pieces-list">
                        @foreach(var piece in game.GetCapturedPieces().Where(p => p.Color == PieceColor.White)) {
                            <div class="captured-piece @(@piece.Type.ToString().ToLower())-@(@piece.Color.ToString().ToLower())"></div>
                        }
                    </div>
                </div>

                @* Hint System - Integrated in side panel *@
                @if (isGameStarted && !game.IsFinished() && !game.GetCurrentPlayer().IsAI()) {
                    <div class="hint-panel-side">
                        <div class="hint-inner-side">
                            <div class="hint-header-side">
                                <span class="hint-title-side">AI Assistant</span>
                                <div class="hint-depth-control-side">
                                    <span class="hint-depth-label-side">Depth</span>
                                    <input type="number" min="1" max="5" @bind="hintSearchDepth" @bind:after="UpdateHintDepth" disabled="@isCalculatingHint" class="hint-depth-input-side" />
                                </div>
                            </div>
                            
                            <div class="hint-body-side">
                                @if (currentHint != null) {
                                    <div class="hint-result-side">
                                        <div class="hint-move-display-side">
                                            <span class="hint-move-text-side">@currentHint.MoveDescription</span>
                                            <span class="hint-score-side @(currentHint.Score > 0 ? "positive" : currentHint.Score < 0 ? "negative" : "neutral")">
                                                @(currentHint.Score > 0 ? "+" : "")@currentHint.Score
                                            </span>
                                        </div>
                                        @if (currentHint.SearchResult != null) {
                                            <div class="hint-meta-side">
                                                <span>@currentHint.SearchResult.TotalNodesEvaluated nodes</span>
                                                <span class="hint-meta-dot-side">â€¢</span>
                                                <span>@currentHint.SearchResult.NodesPruned pruned</span>
                                            </div>
                                        }
                                    </div>
                                } else if (!isCalculatingHint) {
                                    <div class="hint-placeholder-side">
                                        <span>Request a hint to see the best move</span>
                                    </div>
                                }
                            </div>
                            
                            <div class="hint-actions-side">
                                @if (isCalculatingHint) {
                                    <button class="hint-btn-side hint-btn-primary-side" disabled>
                                        <span class="hint-btn-spinner-side"></span>
                                        Analyzing...
                                    </button>
                                } else {
                                    <button class="hint-btn-side hint-btn-primary-side" @onclick="RequestHint">
                                        Get Hint
                                    </button>
                                }
                                
                                @if (currentHint != null) {
                                    <button class="hint-btn-side hint-btn-secondary-side" @onclick="ClearHint">
                                        Clear
                                    </button>
                                    @if (currentHint.SearchResult != null) {
                                        <button class="hint-btn-side hint-btn-ghost-side" @onclick="ShowHintVisualization">
                                            View Tree
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

@if (showVisualization) {
    <MiniMaxTreeVisualization SearchResult="@lastSearchResult" OnClose="CloseVisualization" />
}

@if (showHintVisualization && currentHint?.SearchResult != null) {
    <MiniMaxTreeVisualization SearchResult="@currentHint.SearchResult" OnClose="CloseHintVisualization" />
}

