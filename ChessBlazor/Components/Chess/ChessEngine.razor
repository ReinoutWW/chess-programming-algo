        } else if (selection.Name.StartsWith("W ") || selection.Name.StartsWith("B ")) {
            overlayType = $"piece:{selection.Name}";
        } else {
            overlayType = null;
        }
        
        overlayPiecePosition = null;
        overlayPiece = null;
        
        StateHasChanged();
    }

    private void HandleAttackModeToggled(bool enabled) {
        attackModeEnabled = enabled;
        if (!enabled) {
            // Clear visualization when disabling attack mode
            ClearOverlay();
        }
        StateHasChanged();
    }

    private void ShowPieceAttacks(Position position, Piece piece) {
        var board = game.GetVisualizedBoard();
        if (board == null) return;

        int square = position.Row * 8 + position.Column;
        
        // Track for refresh
        overlayType = $"pieceattacks:{piece.Type}:{piece.Color}";
        overlayPiecePosition = position;
        overlayPiece = piece;
        
        switch (piece.Type) {
            case PieceType.Rook:
                activeBitboard = board.GetRookAttacksForSquare(square);
                activeBitboardName = $"Rook Attacks ({GetSquareName(square)})";
                currentMagicInfo = board.GetRookMagicInfo(square);
                break;
            case PieceType.Bishop:
                activeBitboard = board.GetBishopAttacksForSquare(square);
                activeBitboardName = $"Bishop Attacks ({GetSquareName(square)})";
                currentMagicInfo = board.GetBishopMagicInfo(square);
                break;
            case PieceType.Queen:
                activeBitboard = board.GetQueenAttacksForSquare(square);
                activeBitboardName = $"Queen Attacks ({GetSquareName(square)})";
                currentMagicInfo = null; // Queen doesn't have its own magic, it's Rook + Bishop
                break;
            case PieceType.Knight:
                activeBitboard = BitBoard.GetKnightAttacksForSquare(square);
                activeBitboardName = $"Knight Attacks ({GetSquareName(square)})";
                currentMagicInfo = null;
                break;
            case PieceType.King:
                activeBitboard = BitBoard.GetKingAttacksForSquare(square);
                activeBitboardName = $"King Attacks ({GetSquareName(square)})";
                currentMagicInfo = null;
                break;
            case PieceType.Pawn:
                activeBitboard = BitBoard.GetPawnAttacksForSquare(square, piece.Color);
                activeBitboardName = $"Pawn Attacks ({GetSquareName(square)})";
                currentMagicInfo = null;
                break;
        }
        
        StateHasChanged();
    }

    private void RefreshOverlay() {
        if (overlayType == null || !activeBitboard.HasValue) return;
        
        var board = game.GetVisualizedBoard();
        if (board == null) return;

        if (overlayType == "occupied") {
            activeBitboard = board.OccupiedSquares;
        } else if (overlayType == "white") {
            activeBitboard = board.WhitePieces;
        } else if (overlayType == "black") {
            activeBitboard = board.BlackPieces;
        } else if (overlayType == "allattacks:White") {
            activeBitboard = board.GetAllAttacksForColor(PieceColor.White);
        } else if (overlayType == "allattacks:Black") {
            activeBitboard = board.GetAllAttacksForColor(PieceColor.Black);
        } else if (overlayType.StartsWith("piece:")) {
            // e.g., "piece:W Knight" or "piece:B Pawn"
            var parts = overlayType.Substring(6).Split(' ');
            if (parts.Length == 2) {
                var color = parts[0] == "W" ? PieceColor.White : PieceColor.Black;
                if (Enum.TryParse<PieceType>(parts[1], out var pieceType)) {
                    activeBitboard = board.GetPieceBitboard(color, pieceType);
                }
            }
        } else if (overlayType.StartsWith("pieceattacks:") && overlayPiecePosition != null) {
            // Check if the piece is still at that position
            var currentPiece = game.GetPieceAtPosition(overlayPiecePosition);
            if (currentPiece != null && overlayPiece != null && 
                currentPiece.Type == overlayPiece.Type && currentPiece.Color == overlayPiece.Color) {
                // Piece still there, refresh attacks
                int square = overlayPiecePosition.Row * 8 + overlayPiecePosition.Column;
                switch (currentPiece.Type) {
                    case PieceType.Rook:
                        activeBitboard = board.GetRookAttacksForSquare(square);
                        currentMagicInfo = board.GetRookMagicInfo(square);
                        break;
                    case PieceType.Bishop:
                        activeBitboard = board.GetBishopAttacksForSquare(square);
                        currentMagicInfo = board.GetBishopMagicInfo(square);
                        break;
                    case PieceType.Queen:
                        activeBitboard = board.GetQueenAttacksForSquare(square);
                        break;
                    case PieceType.Knight:
                        activeBitboard = BitBoard.GetKnightAttacksForSquare(square);
                        break;
                    case PieceType.King:
                        activeBitboard = BitBoard.GetKingAttacksForSquare(square);
                        break;
                    case PieceType.Pawn:
                        activeBitboard = BitBoard.GetPawnAttacksForSquare(square, currentPiece.Color);
                        break;
                }
            } else {
                // Piece moved or captured, clear the overlay
                ClearOverlay();
            }
        }
    }

    private void ClearOverlay() {
        activeBitboard = null;
        activeBitboardName = "";
        currentMagicInfo = null;
        overlayType = null;
        overlayPiecePosition = null;
        overlayPiece = null;
    }

    private string GetSquareName(int square) {
        char file = (char)('a' + (square % 8));
        int rank = (square / 8) + 1;
        return $"{file}{rank}";
    }

    private void ResetGame() {
        isGameStarted = false;
        game = new BitBoardGame(WhitePlayer, BlackPlayer, DelayPerMoveInMilliseconds);
        lastCapturedCount = 0;
        selectedCellPosition = null;
        validMovesForselectedCellPosition = new List<Move>();
        currentHint = null;
        ClearOverlay();
        SetupMoveHandler();
        StateHasChanged();
    }
    
    private async Task PlayAgain() {
        ResetGame();
        await StartGame();
    }
    
    private async Task RetryGame() {
        ResetGame();
        await StartGame();
    }
    
    private void SetupMoveHandler() {
        game.NextMoveHandler = async () => {
            // Record move time for the player who just moved
            // Note: NextMoveHandler is called BEFORE NextTurn switches the current player
            // So GetCurrentPlayer() still returns the player who just moved
            if (moveStartTime.HasValue) {
                var moveTime = DateTime.UtcNow - moveStartTime.Value;
                var playerWhoMoved = game.GetCurrentPlayer().Color;
                
                if (playerWhoMoved == PieceColor.White) {
                    whiteTotalTime += moveTime;
                    whiteLastMoveTime = moveTime;
                    whiteMoveCount++;
                } else {
                    blackTotalTime += moveTime;
                    blackLastMoveTime = moveTime;
                    blackMoveCount++;
                }
            }
            
            // Reset move timer for next player
            moveStartTime = DateTime.UtcNow;
            
            await PlayMoveSoundAsync();
            currentHint = null;
            hintService.ClearHint();
            
            var visualizablePlayer = GetVisualizablePlayer();
            if (visualizablePlayer != null) {
                lastSearchResult = visualizablePlayer.GetLastSearchResult();
            }
            
            // Refresh bitboard overlay if active
            RefreshOverlay();
            
            if (game.IsChecked(game.GetCurrentPlayer().Color)) {
                await PlayCheckSoundAsync();
            }
            
            if (game.IsFinished()) {
                await PlayGameOverSoundAsync();
            }
            
            StateHasChanged(); 
        };
        
        game.BeforeAIMoveHandler = async () => {
            StateHasChanged();
            await Task.Yield();
        };
    }
