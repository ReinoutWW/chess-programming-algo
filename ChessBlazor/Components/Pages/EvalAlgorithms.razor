@code {
    private class AlgorithmInfo
    {
        public string Name { get; set; } = "";
        public Func<PieceColor, IPlayer> Factory { get; set; } = null!;
        public bool IsSelected { get; set; } = true;
    }

    private class MatchResult
    {
        public int Wins { get; set; }
        public int Draws { get; set; }
        public int Losses { get; set; }
        public float Score => Wins * 1.0f + Draws * 0.5f;
    }

    private class Ranking
    {
        public string AlgoName { get; set; } = "";
        public float Score { get; set; }
    }

    private List<AlgorithmInfo> allAlgorithms = new()
    {
        new() { Name = "Random", Factory = color => new RandomMovePlayer(color), IsSelected = true },
        new() { Name = "Very Random", Factory = color => new VeryRandomMovePlayer(color), IsSelected = true },
        new() { Name = "Greedy", Factory = color => new GreedyPlayer(color), IsSelected = true },
        new() { Name = "MiniMax with Material Eval", Factory = color => new MiniMaxPlayer(color, new MaterialEvaluation()), IsSelected = true },
        new() { Name = "MiniMax with Mobility Eval", Factory = color => new MiniMaxPlayer(color, new MobilityEvaluation()), IsSelected = true },
        new() { Name = "MiniMax with MatMob Eval", Factory = color => new MiniMaxPlayer(color, new MaterialMobilityFunction()), IsSelected = true }
    };

    private IEnumerable<AlgorithmInfo> selectedAlgorithms => allAlgorithms.Where(a => a.IsSelected);
    private bool HasSelectedAlgorithms => selectedAlgorithms.Any();

    private Dictionary<string, MatchResult> results = new();
    private List<string> logs = new();
    private bool isEvaluating = false;
    private int currentProgress = 0;
    private int totalGames = 0;
    private int gamesPerMatchup = 10;

    private double progressPercentage => totalGames > 0 ? (currentProgress * 100.0 / totalGames) : 0;

    private void SelectAll()
    {
        foreach (var algo in allAlgorithms)
        {
            algo.IsSelected = true;
        }
    }

    private void DeselectAll()
    {
        foreach (var algo in allAlgorithms)
        {
            algo.IsSelected = false;
        }
    }

    private async Task EvaluateAll()
    {
        if (!HasSelectedAlgorithms) return;

        isEvaluating = true;
        results.Clear();
        logs.Clear();
        currentProgress = 0;

        var algorithmsToEval = selectedAlgorithms.ToList();

        // Calculate total games
        totalGames = algorithmsToEval.Count * algorithmsToEval.Count * gamesPerMatchup;

        await InvokeAsync(StateHasChanged);

        for (int i = 0; i < algorithmsToEval.Count; i++)
        {
            for (int j = 0; j < algorithmsToEval.Count; j++)
            {
                var algo1 = algorithmsToEval[i];
                var algo2 = algorithmsToEval[j];

                await EvaluateMatchup(algo1, algo2);
                await InvokeAsync(StateHasChanged);
            }
        }

        await AddLog("=== Evaluation Complete! ===");
        isEvaluating = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task EvaluateMatchup(AlgorithmInfo algo1, AlgorithmInfo algo2)
    {
        var key = $"{algo1.Name}vs{algo2.Name}";
        var result = new MatchResult();

        await AddLog($"Starting: {algo1.Name} vs {algo2.Name}");
        await InvokeAsync(StateHasChanged);

        for (int gameNum = 1; gameNum <= gamesPerMatchup; gameNum++)
        {
            // Alternate colors
            var whitePlayer = gameNum % 2 == 1 ? algo1.Factory(PieceColor.White) : algo2.Factory(PieceColor.White);
            var blackPlayer = gameNum % 2 == 1 ? algo2.Factory(PieceColor.Black) : algo1.Factory(PieceColor.Black);

            var game = new Game(whitePlayer, blackPlayer, 0);
            await game.Start();

            while (!game.IsFinished())
            {
                await Task.Delay(1); // Allow UI updates
            }

            // Determine result from algo1's perspective
            bool algo1WasWhite = gameNum % 2 == 1;
            if (game.Winner == null)
            {
                result.Draws++;
                await AddLog($"  {algo1.Name} vs {algo2.Name}: Game {gameNum} = Draw ({game.GetGameEndReason()})");
            }
            else if ((algo1WasWhite && game.Winner.Color == PieceColor.White) ||
                     (!algo1WasWhite && game.Winner.Color == PieceColor.Black))
            {
                result.Wins++;
                await AddLog($"  {algo1.Name} vs {algo2.Name}: Game {gameNum} = WIN (Score: {result.Wins}-{result.Draws}-{result.Losses})");
            }
            else
            {
                result.Losses++;
                await AddLog($"  {algo1.Name} vs {algo2.Name}: Game {gameNum} = Loss (Score: {result.Wins}-{result.Draws}-{result.Losses})");
            }

            currentProgress++;
            await InvokeAsync(StateHasChanged);
            await Task.Yield(); // Give UI thread a chance to update
        }

        results[key] = result;
        await AddLog($"Completed: {algo1.Name} vs {algo2.Name} = {result.Wins}W-{result.Draws}D-{result.Losses}L ({result.Score} pts)");
        await InvokeAsync(StateHasChanged);
    }

    private async Task AddLog(string message)
    {
        logs.Add($"[{DateTime.Now:HH:mm:ss}] {message}");
        if (logs.Count > 200) // Keep last 200 logs
        {
            logs.RemoveAt(0);
        }
        
        try
        {
            await JSRuntime.InvokeVoidAsync("scrollLogsToBottom");
        }
        catch
        {
            // Ignore JS interop errors (e.g., during prerendering)
        }
    }

    private string GetCellClass(MatchResult? result)
    {
        if (result == null) return "";
        
        if (result.Wins >= 7) return "dominant";
        if (result.Wins >= 5) return "strong";
        if (result.Wins <= 3 && result.Losses >= 5) return "weak";
        
        return "";
    }

    private float CalculateTotalScore(string algoName)
    {
        float total = 0;
        foreach (var algo in selectedAlgorithms)
        {
            var key = $"{algoName}vs{algo.Name}";
            if (results.ContainsKey(key))
            {
                total += results[key].Score;
            }
        }
        return total;
    }

    private List<Ranking> GetRankings()
    {
        var rankings = selectedAlgorithms
            .Select(algo => new Ranking
            {
                AlgoName = algo.Name,
                Score = CalculateTotalScore(algo.Name)
            })
            .OrderByDescending(r => r.Score)
            .ToList();

        return rankings;
    }
}

