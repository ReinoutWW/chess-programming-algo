@page "/eval"

@using global::Chess.Programming.Ago.Core
@using global::Chess.Programming.Ago.Game
@using global::Chess.Programming.Ago.ChessEngines
@using global::Chess.Programming.Ago.ChessEngines.Evaluations
@inject IJSRuntime JSRuntime

@rendermode InteractiveServer

<PageTitle>Algorithm Evaluation</PageTitle>

<div class="eval-container">
    <h1 class="eval-title">Chess Algorithm Evaluation</h1>
    <p class="eval-subtitle">Compare all AI algorithms against each other</p>

    <div class="selection-section">
        <h3 class="selection-title">Select Algorithms to Evaluate</h3>
        <div class="algo-selection">
            @foreach (var algo in allAlgorithms)
            {
                <label class="algo-checkbox">
                    <input type="checkbox" 
                           @bind="algo.IsSelected" 
                           disabled="@isEvaluating" />
                    <span>@algo.Name</span>
                </label>
            }
        </div>
        <div class="selection-actions">
            <button class="select-all-btn" @onclick="SelectAll" disabled="@isEvaluating">Select All</button>
            <button class="select-all-btn" @onclick="DeselectAll" disabled="@isEvaluating">Deselect All</button>
            <div class="games-input-container">
                <label class="games-label">Games per matchup:</label>
                <input type="number" 
                       class="games-input" 
                       @bind="gamesPerMatchup" 
                       min="1" 
                       max="100" 
                       disabled="@isEvaluating" />
            </div>
        </div>
    </div>

    <div class="controls">
        <button class="eval-button" @onclick="EvaluateAll" disabled="@(isEvaluating || !HasSelectedAlgorithms)">
            @if (isEvaluating)
            {
                <span>Evaluating... (@currentProgress/@totalGames games)</span>
            }
            else
            {
                <span>Evaluate Selected (@selectedAlgorithms.Count())</span>
            }
        </button>

        @if (isEvaluating)
        {
            <div class="progress-bar">
                <div class="progress-fill" style="width: @(progressPercentage)%"></div>
            </div>
        }
        
        @if (!HasSelectedAlgorithms && !isEvaluating)
        {
            <p class="hint-text">Please select at least one algorithm to evaluate</p>
        }
    </div>

    @if (logs.Any())
    {
        <div class="logs-section">
            <h2>Live Logs</h2>
            <div class="logs-container" id="logs-container">
                @foreach (var log in logs.TakeLast(50))
                {
                    <div class="log-entry">@log</div>
                }
            </div>
        </div>
    }

    @if (results.Any())
    {
        <div class="results-section">
            <h2>Results Matrix</h2>
            <p class="matrix-description">Each cell shows Wins/Draws/Losses from the row player's perspective</p>
            
            <div class="matrix-container">
                <table class="results-matrix">
                    <thead>
                        <tr>
                            <th class="corner-cell"></th>
                            @foreach (var algo in selectedAlgorithms)
                            {
                                <th class="header-cell">@algo.Name</th>
                            }
                            <th class="header-cell total-header">Total Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rowAlgo in selectedAlgorithms)
                        {
                            <tr>
                                <th class="row-header">@rowAlgo.Name</th>
                                @foreach (var colAlgo in selectedAlgorithms)
                                {
                                    var key = $"{rowAlgo.Name}vs{colAlgo.Name}";
                                    var result = results.ContainsKey(key) ? results[key] : null;
                                    var isSelfMatch = rowAlgo.Name == colAlgo.Name;
                                    
                                    <td class="result-cell @GetCellClass(result) @(isSelfMatch ? "self-match" : "")">
                                        @if (result != null)
                                        {
                                            <div class="result-content">
                                                <span class="wins">@result.Wins</span>
                                                <span class="separator">/</span>
                                                <span class="draws">@result.Draws</span>
                                                <span class="separator">/</span>
                                                <span class="losses">@result.Losses</span>
                                            </div>
                                            <div class="result-score">@result.Score pts</div>
                                        }
                                        else
                                        {
                                            <span class="pending">...</span>
                                        }
                                    </td>
                                }
                                <td class="total-cell">
                                    @{
                                        var totalScore = CalculateTotalScore(rowAlgo.Name);
                                    }
                                    <strong>@totalScore</strong>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="ranking-section">
                <h2>Final Rankings</h2>
                <ol class="ranking-list">
                    @foreach (var ranking in GetRankings())
                    {
                        <li class="ranking-item">
                            <span class="algo-name">@ranking.AlgoName</span>
                            <span class="algo-score">@ranking.Score points</span>
                        </li>
                    }
                </ol>
            </div>
        </div>
    }
</div>

<script>
    window.scrollLogsToBottom = function() {
        const logsContainer = document.getElementById('logs-container');
        if (logsContainer) {
            logsContainer.scrollTop = logsContainer.scrollHeight;
        }
    }
</script>

